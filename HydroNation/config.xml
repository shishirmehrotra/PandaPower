<?xml version='1.0' encoding='utf-8'?>
<widget id="com.myapp.mobile" version="1.3.0" xmlns="http://www.w3.org/ns/widgets">
  <name>Hydronation</name>

  <preference name="phonegap-version" value="cli-8.0.0" />

  <!-- White list for Zaiper -->
  <access origin="https://hooks.zapier.com/" subdomains="true" />
  <allow-intent href="*://*.zapier.com/*" />
  <allow-navigation href="*://*.zapier.com/*" />

  <!-- Universal Plugins -->
  <plugin name="cordova-plugin-splashscreen"/>
  <plugin name="cordova-plugin-device" spec="2.0.1" />
  <!-- Not using
  <plugin name="cordova-plugin-inappbrowser" spec="1.3.0" />
  -->

  <!-- Universal preferences -->
  <preference name="permissions" value="none" />
  <preference name="Orientation" value="portrait" />
  <preference name="Fullscreen" value="true" />

  <access origin="*" />

  <platform name="ios">
    <preference name="deployment-target" value="8.0" />
    <preference name="target-device" value="universal" />
    <!-- Universal-->
    <icon src="images/iosRes/icon-60@2x.png" width="120" height="120" />
    <icon src="images/iosRes/icon-76.png" width="76" height="76" />
    <icon src="images/iosRes/icon-76@2x.png" width="152" height="152" />
    <icon src="images/iosRes/icon-83.5@2x.png" width="167" height="167" />
    <icon src="images/iosRes/icon-40@2x.png" width="80" height="80" />
    <icon src="images/iosRes/icon-40.png" width="40" height="40" />


    <splash src="images/splash2.png" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreen" value="true"/>
    <preference name="FadeSplashScreenDuration" value="1000"/>

    <preference name="SuppressesIncrementalRendering" value="true"/>
  </platform>

  <platform name="android">
    <!-- Plugin needed for android -->
    <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
    <icon src="images/androidRes/mdpi.png" density="mdpi" />
    <icon src="images/androidRes/hdpi.png" density="hdpi" />
    <icon src="images/androidRes/xhdpi.png" density="xhdpi" />
    <icon src="images/androidRes/xxhdpi.png" density="xxhdpi" />
    <icon src="images/androidRes/xxxhdpi.png" density="xxxhdpi" />
  </platform>

</widget>
